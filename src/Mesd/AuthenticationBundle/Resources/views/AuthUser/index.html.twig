{% extends 'MesdReportDemoBundle:Index:index.html.twig' %}
{% block main %}
    <h1>AuthUser list</h1>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Actions</th>
                <th>ID</th>
                <th>Usersame</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Last Login</th>
                <th>Active</th>
                <th>Locked</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('authuser_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('authuser_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
                <td><a href="{{ path('authuser_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isActive }}</td>
                <td>{{ entity.isLocked }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('authuser_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock main %}
