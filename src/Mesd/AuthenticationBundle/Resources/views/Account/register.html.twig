{# src/Mesd/AuthenticationBundle/Resources/views/Account/register.html.twig #}
{% extends 'MesdReportDemoBundle:Index:splash.html.twig' %}
{% set subtitle = 'Register' %}

{% block container %}

    <div class="panel panel-splash panel-splash-medium">
        <div class="panel-header login-header">
            {% block subtitle %}
                <h1>{{ subtitle }}</h1>
            {% endblock subtitle %}
        </div>
        <div class="panel-body">
            {% block panelBody %}
                {% if error is defined %}
                    <div>{{ error.message }}</div>
                {% endif %}
                {{ form_start(form) }}

                    {{ form_errors(form) }}

                     <div class="form-group">
                        {{ form_label(form.username) }}
                        {{ form_errors(form.username) }}
                        {{ form_widget(form.username, {'attr': {
                            'class': 'form-control',
                            'tabindex': 1,
                        }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {
                            'class': 'form-control',
                            'tabindex': 2,
                        }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.first) }}
                        {{ form_errors(form.password.first) }}
                        {{ form_widget(form.password.first, {'attr': {
                            'class': 'form-control',
                            'tabindex': 3,
                        }}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password.second) }}
                        {{ form_errors(form.password.second) }}
                        {{ form_widget(form.password.second, {'attr': {
                            'class': 'form-control',
                            'tabindex': 4,
                        }}) }}
                    </div>

            {% endblock panelBody %}
        </div>
        <div class="panel-footer">
            {% block panelFooter %}


                <div class="form-group">
                    {{ form_widget(form.save, { 'attr': {
                        'class': 'btn btn-primary',
                        'tabindex': 5,
                    },
                    'label': 'Register'
                } ) }}
                </div>

                    {{ form_rest(form) }}

                {{ form_end(form) }}

            {% endblock panelFooter %}
        </div>
    </div>

{% endblock container %}